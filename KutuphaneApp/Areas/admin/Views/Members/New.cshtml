@model Members
<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Yeni Marka Ekle</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form asp-controller="Members" asp-action="New" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                            <div class="item form-group">
                                <label class="col-form-label col-12 col-sm-2 label-align" asp-for="Name">
                                </label>
                                <div class="col-12 col-sm-10">
                                    <input asp-for="Name" class="form-control">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-12 col-sm-2 label-align" asp-for="Surname">
                                </label>
                                <div class="col-12 col-sm-10">
                                    <input asp-for="Surname" class="form-control">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-12 col-sm-2 label-align" asp-for="Username">
                                </label>
                                <div class="col-12 col-sm-10">
                                    <input asp-for="Username" class="form-control">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-12 col-sm-2 label-align" asp-for="Password">
                                </label>
                                <div class="col-12 col-sm-10">
                                    <input asp-for="Password" class="form-control">
                                </div>
                            </div>
                         
                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-12">
                                    <a asp-controller="Members" asp-action="Index" class="btn btn-primary" style="color:#fff">İptal</a>
                                    <button class="btn btn-primary" type="reset">Temizle</button>
                                    <button type="submit" class="btn btn-success">Ekle</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
