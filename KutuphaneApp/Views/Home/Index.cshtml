@model IEnumerable<Book>

<section class="page-section portfolio" id="portfolio">
    <div class="container">
        <!-- Portfolio Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">KİTAPLARIMIZ</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Portfolio Grid Items-->
        <div class="row justify-content-center">
            <!-- Portfolio Item 1-->
            @foreach (Book book in Model)
            {
                <div class="col-md-5 col-lg-3 mb-3">
                    <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#portfolioModal1">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                            <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                        </div>
                        <img class="img-fluid" src="@book.Picture" alt="@book.Name" />
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- About Section-->
<section class="page-section bg-primary text-white mb-0" id="about">
    <div class="container">
        <!-- About Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-white">Hakkımızda</h2>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- About Section Content-->
        <div class="row">
            <div class="col-lg-4 ms-auto"><p class="lead">Kütüphanemizde Üyelerimiz için seckin yazarların değerlileri ve nadir kitaplarımız vardır yukarıda göz atabilir kayıt olur kütüphanem
                ze gel
                p ödünç alabilirsiniz.
            </p></div>
            <div class="col-lg-4 me-auto"><p class="lead">Değerli Üyerlerinmize kitaplarımız üçretsizdir..</p></div>
        </div>
        <!-- About Section Button-->
       
    </div>
</section>
